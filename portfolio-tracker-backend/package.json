{
  "name": "finlytics-backend",
  "version": "1.0.0",
  "description": "Finlytics Investment Portfolio Tracker Backend - Smart Analytics Platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --testTimeout=10000",
    "test:watch": "jest --watch --testTimeout=10000",
    "test:coverage": "jest --coverage --testTimeout=10000",
    "test:integration": "jest --testNamePattern='Integration' --testTimeout=30000",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "docs": "swagger-jsdoc -d src/config/swagger.js src/routes/*.js -o swagger.json",
    "cleanup": "node -e \"require('./src/jobs/dataCleanupJob').manualCleanup()\"",
    "update-prices": "node -e \"require('./src/jobs/priceUpdateJob').runOnce()\"",
    "seed": "node scripts/seed.js",
    "migrate": "node scripts/migrate.js",
    "migrate:status": "node scripts/migrate.js status",
    "load-test": "node scripts/performance/load-test.js",
    "load-test:stress": "node scripts/performance/load-test.js stress",
    "load-test:websocket": "node scripts/performance/load-test.js websocket",
    "db:optimize": "node scripts/performance/db-optimizer.js",
    "db:health": "node scripts/performance/db-optimizer.js health",
    "k8s:deploy": "kubectl apply -f k8s/",
    "k8s:delete": "kubectl delete -f k8s/",
    "production": "NODE_ENV=production node server.js"
  },
  "keywords": [
    "portfolio",
    "investment",
    "tracker",
    "finance"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.9.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.2",
    "joi": "^17.10.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.4",
    "passport": "^0.6.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "socket.io": "^4.7.2",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "artillery": "^2.0.0",
    "eslint": "^8.48.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.6.4",
    "mongodb-memory-server": "^9.5.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.3",
    "swagger-jsdoc": "^6.2.8"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
